@model IEnumerable<ClassifiedRobot.Models.FetchedAd>


<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">
                Extracted Ads
                <span class="category" id="extractedCount">
                    @Model.Count()
                </span>
            </h4>

        </div>
        <div class="content">

            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="chkAll">
                            </th>
                            <th>Title</th>
                            <th>Posted On</th>
                            <th>Messages</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            if (!string.IsNullOrEmpty(item.Name))
                            {
                                <tr>
                                    <td> <input type="checkbox" class="chkAd" value="@item.FetchedAdId"></td>
                                    <td>
                                        <a href="@item.Link" target="_blank">
                                           @item.Name
                                        </a>
                                    </td>
                                    <td>@item.PostedOn</td>
                                    <td>
                                        @if (item.Messages != null)
                                        {
                                            @item.Messages.Count
                                        }
                                        else
                                        {
                                            <span>0</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>